
@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Account/Logout">
        <label class="align-content-center">@User.Identity.Name</label>
        <button type="submit" class="ml-2 btn btn-outline-danger">Выйти</button>
    </form>
}
else
{
    <a class="btn btn-outline-primary" asp-page="/Account/Login">Войти</a>
}