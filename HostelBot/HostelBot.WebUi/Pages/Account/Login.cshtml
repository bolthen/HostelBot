@page
@model WebUi.Pages.Account.Login

@{
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>

<html lang="ru">
<head>
    <title></title>
</head>
<body>
<div>
    <div class="container border" style="padding: 20px">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row m-3">
                <div class="col-2">
                    <label asp-for="Manager.Login"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="Manager.Login"/>
                </div>
                <span class="text-danger" asp-validation-for="Manager.Login"></span>
            </div>
            <div class="form-group row m-3">
                <div class="col-2">
                    <label asp-for="Manager.Password"></label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="Manager.Password"/>
                </div>
                <span class="text-danger" asp-validation-for="Manager.Password"></span>
            </div>
            <div class="form-group row m-3">
                <div class="col-3">
                    <input type="submit" class="btn btn-primary" value="Войти"/>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>