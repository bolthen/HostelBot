@page
@model WebUi.Pages.Utilities.UtilitiesPage

@{
    ViewData["Title"] = "Услуги";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <h2>Зарегестрированные услуги</h2>
    @foreach (var utility in Model.Utilities)
    {
        <div class="row">
            <div class="col-4 text-center align-self-center">@utility.Name</div>
            <a asp-page="/Utilities/DeletePage" asp-route-Id="@utility.Id" class="col-1 text-center m-1 btn btn-danger">
                Удалить
            </a>
        </div>
    }
</div>
</body>
</html>